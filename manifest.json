{
    "manifest_version": 3,
    "name": "LightingCrawl",
    "version": "1.0",
    "description": "基于浏览器插件的数据采集工具",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions":["scripting", "tabs", "storage", "activeTab"],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }
}